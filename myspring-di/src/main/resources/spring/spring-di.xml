<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

	<bean id="hiredateObject" class="java.util.Date" /><!--配置了系统类 -->
	<bean id="deptObj" class="cn.unicorn.myspring.di.vo.Dept"><!--创建Dept实例 -->
		<property name="deptno" value="10" />
		<property name="dname" value="哲♂学部" />
		<property name="enable" value="true" />
		<property name="emps">
			<list><!--该属性定义的是一个数组, 等价于<list> -->
				<ref bean="empA" />
				<ref bean="empB" />
			</list>
		</property>
		<property name="infos"><!--追加的是普通的字符串的数组信息  -->
			<list>
				<value>bilibili干杯[]~(￣▽￣)~*</value>
				<value>deep♂dark♂fantasy</value>
			</list>
		</property>
	</bean>
	<bean id="empA" class="cn.unicorn.myspring.di.vo.Emp">
		<property name="empno" value="7369" />
		<property name="ename" value="smith" />
		<property name="salary" value="233.3" />
		<!--此时使用的是一个对象,所以可以直接进行其他bean的配置引用 -->
		<property name="hiredate">
			<bean class="java.util.Date"></bean>
		</property>
	</bean>
	<bean id="empB" class="cn.unicorn.myspring.di.vo.Emp">
		<property name="empno" value="7944" />
		<property name="ename" value="allen" />
		<property name="salary" value="66.6" />
		<!--此时使用的是一个对象,所以可以直接进行其他bean的配置引用 -->
		<property name="hiredate">
			<bean class="java.util.Date"></bean>
		</property>
	</bean>

</beans>
